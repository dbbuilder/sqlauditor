# Handle line endings
* text=auto

# Exclude invalid paths
api/test-publish?/ export-ignore
**/test-publish?/ export-ignore

# Binary files
*.dll binary
*.exe binary
*.pdb binary
*.snk binary
*.ico binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ttf binary
*.woff binary
*.woff2 binary
*.eot binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.tgz binary

# Force LF for scripts
*.sh text eol=lf
*.ps1 text eol=crlf
*.cmd text eol=crlf
*.bat text eol=crlf